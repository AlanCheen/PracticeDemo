<yifeiyuan.practice.practicedemos.drager.DragerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yifeiyuan.practice.practicedemos.drager.ViewDragerActivity"
    android:orientation="vertical"
    android:id="@+id/drager"
    android:background="#eeeeee"
    >

    <TextView
        android:id="@+id/tv_one"
        android:text="TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#0000ff"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tv_two"
        android:text="Release to back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#00ff00"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tv_three"
        android:text="Edge left touch to drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#ff0000"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tv_four"
        android:text="Edge right touch to drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#ffff00"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tv_five"
        android:text="The view clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#ff00ff"
        android:padding="15dp"
        android:clickable="true"
        />
</yifeiyuan.practice.practicedemos.drager.DragerView>
